<h2>Edit Figure</h2>
<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH" />
    <label for="figure_name">Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>" />
    
    <h3>Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" id="<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %> /> <%= title.name %><br />
    <% end %>
    
    <h3>Create New Title:</h3>
    <input type="text" id="title_name" name="title[name]" />

    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" id="<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> /> <%= landmark.name %><br />
    <% end %>

    <h3>Create New Landmark</h3>
    <label for="new_landmark">Name</label>
    <input type="text" id="new_landmark" name="landmark[name]" />
    
    <label for="landmark_year">Year</label>
    <input type="text" id="landmark_year" name="landmark[year_completed]" />

    <input type="submit" id="submit" value="Edit Figure" />
</form>